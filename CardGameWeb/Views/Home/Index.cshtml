@{
    ViewData["Title"] = "31 Card Game";
}
    <div class="jumbotron jumbotron-fluid">
        <div class="container">

            <h1 class="display-4">Thirty One Card Game</h1>

            <p class="lead">Do you want to host a new game or join one waiting to start?</p>
        </div>
    </div>
<div class="row">
    <div class="col-md-6" style="border-right: 2px dashed black;">
        <h4>Join Game</h4>
        <form asp-action="Join" asp-controller="Game" method="get">
            <div class="form-group">
                <label class="control-label">Your Name</label>
                <input type="text" name="Name" class="form-control" />
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label class="control-label">Game ID</label>
                    <input type="number" name="GameId" class="form-control" value="@ViewBag.GameId" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Join Game" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-6" style="text-align:center; vertical-align:middle;margin-top:100px;">
        <a class="btn btn-primary" href="@Url.Action("New","Game")">Start New Game</a>
    </div>
</div>



