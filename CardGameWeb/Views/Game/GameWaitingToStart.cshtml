@model CardGameLib.Game
@{
    ViewData["Title"] = "Game Waiting To Start";
}

<h2>Game: @Model.GameId</h2>


<h4>Players:</h4>
<ul class="list-group">
    @foreach(var p in Model.Players)
    {
        <li class="list-group-item">@p.Name</li>
    }
</ul>

@if (ViewBag.IsHost)
{
    <hr />
    <a class="btn btn-primary" href="@Url.Action("StartGame",new { Id = Model.GameId, PlayerId=(Model.Host as HumanPlayer).Guid.ToString() })">Start Game!</a>
}

<script>
    setTimeout(function(){ window.location.reload(1);}, 5000);
</script>