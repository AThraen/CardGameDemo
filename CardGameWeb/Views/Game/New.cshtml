@model CardGameWeb.Models.GameStartOptions

@{
    ViewData["Title"] = "Start New Game";
}

<h2>New Game</h2>

<h4>Options</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SetupNewGame">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerName" class="control-label"></label>
                <input asp-for="PlayerName" class="form-control" />
                <span asp-validation-for="PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ComputerPlayer" />Include computer player
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Start Game" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


